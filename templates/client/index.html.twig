{% extends 'base.html.twig' %}

{% block title %}Список клиентов{% endblock %}

{% block body %}
    <h1>Список клиентов</h1>

    {% if pagination is defined and pagination.getTotalItemCount > 0 %}
        <table class="table table-striped">
            <thead>
                <tr>
                    {#<th>ID</th>#}
                    <th>Имя</th>
                    <th>Фамилия</th>
                    <th>Телефон</th>
                    <th>Email</th>
                    <th>Образование</th>
                    <th>Скоринг</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
            {% for client in pagination %}
                <tr>
                    {#<td>{{ client.id }}</td>#}
                    <td>{{ client.firstName }}</td>
                    <td>{{ client.lastName }}</td>
                    <td>{{ client.phoneNumber }}</td>
                    <td>{{ client.email }}</td>
                    <td>{{ client.education }}</td>
                    <td>{{ client.scoring }}</td>
                    <td>
                        <a href="{{ path('app_client_show', {'id': client.id}) }}" class="btn btn-sm btn-info">Просмотр</a>
                        <a href="{{ path('app_client_edit', {'id': client.id}) }}" class="btn btn-sm btn-warning">Редактировать</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
    {% else %}
        <p>Клиенты не найдены.</p>
    {% endif %}

    <p>
        <a href="{{ path('app_register') }}" class="btn btn-primary">Зарегистрировать нового клиента</a>
    </p>
{% endblock %}
